    <script>
        var donateform = document.getElementById("donateform");
        var usersignupform = document.getElementById("usersignupform");
        donateform.style.display = "none";
        usersignupform.style.display = "none";

        let donatebutton = document.getElementById('donatebutton');
        let signupbutton = document.getElementById('signupbutton');




        donatebutton.addEventListener("click", () => {
            if (donateform.style.display === "none") {
                usersignupform.style.display = "none";
                donateform.style.display = "inline-block";
            } else {
                donateform.style.display = "none";
            }
        });


        signupbutton.addEventListener("click", () => {
            if (usersignupform.style.display === "none") {
                donateform.style.display = "none";
                usersignupform.style.display = "inline-block";
            } else {
                usersignupform.style.display = "none";
            }
        });

        //OAuth
        let URL = 'https://accounts.google.com/o/oauth2/v2/auth';
        let options = {
            response_type: 'code',
            client_id: '82394101385-etk6j4a51uavmfnsg83uc7ccsc5nc0if.apps.googleusercontent.com',
            redirect_uri: 'https://gazahopes.herokuapp.com/api/v1/donor/oauth',
            scope: 'openid email',
            state: 'https://gazahopes.herokuapp.com',
            access_type: 'offline',
        }
        let QueryString = Object.keys(options).map((key) => {
            return `${key}=` + encodeURIComponent(options[key]);
        }).join("&");
        let authURL = `${URL}?${QueryString}`;
        let link = document.getElementById('oauth');
        link.setAttribute('href', authURL);
    </script>

</body>

</html>